{
    "name": "obbz/yii2-app-advanced",
    "description": "Yii 2 Core Project",
    "keywords": ["yii2", "framework", "advanced", "project template"],
    "type": "project",
    "license": "BSD-3-Clause",

    "minimum-stability": "dev",
    "repositories": [
        {
            "type":"vcs",
            "url":"D:\\htdocs\\obbz-repository\\yii2"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0.6",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "mdmsoft/yii2-admin": "~2.0",
        "obbz/yii2": "dev-master",
        "yiisoft/yii2-authclient": "^2.1",
        "voskobovich/yii2-linker-behavior": "^4.0",
        "codemix/yii2-localeurls": "dev-master",
        "newerton/yii2-fancybox": "dev-master",
        "2amigos/yii2-file-upload-widget": "~1.0"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.3",
        "codeception/verify": "*"
    },
    "config": {
        "vendor-dir":"../yii2-vendors",
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "../yii2-vendors/npm",
            "bower-asset-library": "../yii2-vendors/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    }
}
